# Contractor Portal Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_USER=contractor_user
DB_PASSWORD=your_secure_password_here
DB_NAME=contractor_portal

# JWT Secret (used for authentication tokens)
# Generate with: openssl rand -hex 32
APP_JWT_SECRET=your_long_random_secret_key_here

# OAuth Configuration (Google)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth Configuration (Microsoft) - Optional
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# OpenAI API Key (for AI Assistant)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_PORT=8080
APP_HOST=0.0.0.0
